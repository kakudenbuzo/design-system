{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@company/tokens": ["./packages/tokens/src"],
      "@company/ui": ["./packages/ui/src"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}